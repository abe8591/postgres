extends ./base.jade
block append style
    link(rel="stylesheet", type="text/css", href="/assets/style.css")
block body
  nav
    a(href="/login")
    .navlink
      a(href="/login") Log In
    .navlink
      a(href="/signup") Sign Up
  section#login
    form#loginForm(class="mainForm", name="loginForm", action="/login", method="POST")
      label(for="username") Username: 
      input#user(type="text", name="username", placeholder="username")
      label(for="pass") Password: 
      input#pass(type="password", name="pass", placeholder="password")
      label         
      input#loginSubmit(type="submit", value="Log In")
    h3
      span#errorMessage
block scripts
    script(src="/assets/client.js")